<script>
    function myFunction() {
        var x = document.getElementById("myTopnav");
        if (x.className === "topnav") {
            x.className += " responsive";
        } else {
            x.className = "topnav";
        }
    }

    initialRecipe({{{ data }}});

    function initialRecipe(recipeD) {
        $(() => { // Get data from api
            console.log(recipeD, 'OKAY')
            recipeD.results.forEach(e => {
                $('#RecipeList').append(recipe(e.title, e.image, e.id, e.servings));
            });
        });
        const recipe = (title, image, id, serving) => {
            return `
            <div class="innerwrapper" id="indexRecipeStyle">
                <div class="name">
                    <a class="learnMore" href="https://spoonacular.com/${title}-${id}">${title}</a>
                </div>
                  <div class="image">
                                <img src="${image}">
                            </div>
            <div class="serving-size">
                <p>${serving}</p>
            </div>`
        };
    }

</script>