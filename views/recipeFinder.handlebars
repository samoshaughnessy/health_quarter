

<section>
    <div class="recipebannerbackground">
        <div><p>RECIPES</p></div>
    </div>
</section>


<div class="recipeFinderBG">
    <h2 class='rftitle'>Find your recipes</h2>
    <p class='rftitle' id='append'>If you become a member you can save your
        most enjoyable dishes for later</p>

    <!--This is the template for the load in page-->
    <template id="loading template">
        <div class="loadbuttons">
            <p>
                <button class="searchRecipeButton" id="search-cal"
                    name="search-cal">Search by Calorie</button>
            </p>
            <p>
                <button class="searchRecipeButton" id="search-tag"
                    name="search-tag">Search by Tag</button>
            </p>
            <p>
                <button class="searchRecipeButton" id="search-ing"
                    name="search-ing">Search by Ingredients</button>
            </p>

        </div>
    </template>

    <!--Search by calorie-->

    <template id="search-temp-cal">
        <div class="ui block">
            <div class="ui grid">
                <h2 class" page-header">Search for Recipes:</h2>
                <form action="/searchcal" method="post">
                    <div class="ui form">
                        <div class="field">
                            <label>Serch by Calorie:</label>
                            <br> Minimum Calories:
                            <input type="text" name="minCalorie"
                                value="150">
                            <br> Maximum Calories:
                            <input type="text" name="maxCalorie"
                                value="600">
                            <br> Number of search requests (between 1-5):
                            <input type="number" name="quantity" min="1"
                                max="5">
                        </div>
                    </div>
                    <br>
                    <p>
                        <button name="submit" class="searchRecipeButton"
                            type="submit">Find Recipe(s)</button>
                    </p>
                    <br>
                    <br>
                </div>
            </form>
        </div>
    </template>

</div>


<!--Search by tag-->
