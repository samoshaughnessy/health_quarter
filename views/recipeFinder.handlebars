                </p>
                <br>
                <br>
            </div>
        </form>
    </div>

</template>


<!--Frist scripts are for rendering the first template, then script give buttons functionality-->
<script src='https://code.jquery.com/jquery-2.2.4.min.js'></script>
<script>
        const supportsTemplate = function () {
            return 'content' in document.createElement('template');
        }

        document.addEventListener('DOMContentLoaded', () => {
            if (supportsTemplate()) {
                console.log('Templates are supported.');
                let first = document.getElementById('loading template');
                let content1 = first.content;
                document.getElementById('append').appendChild(content1);
            } else {
                console.log('ffs')
            }
        })


        //hide both buttons won't work.
        $(document).on("click", "#search-cal", function () {
            console.log('calsearch');
           // $('#pfRecipes').hide;
            $('#search-tag').hide(); $('#search-cal').hide(); $('#search-ing').hide();
            let second = document.getElementById('search-temp-cal');
            let content2 = second.content;
            document.getElementById('append').appendChild(content2);
        });

        $(document).on("click", "#search-tag", function () {
            console.log('tagsearch');
            //$('#pfRecipes').hide;
            $('#search-tag').hide(); $('#search-cal').hide(); $('#search-ing').hide();
            let third = document.getElementById('search-temp-tag');
            let content3 = third.content;
            document.getElementById('append').appendChild(content3);
        });

          $(document).on("click", "#search-ing", function () {
            console.log('ingsearch');
            //$('#pfRecipes').hide;
            $('#search-tag').hide(); $('#search-cal').hide(); $('#search-ing').hide();
            let fourth = document.getElementById('search-temp-ing');
            let content4 = fourth.content;
            document.getElementById('append').appendChild(content4);
        });
        
 </script>
